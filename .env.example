# ================================
# 服务端口配置
# ================================
SERVER_PORT=8080
WEB_PORT=80

# ================================
# 时区设置
# ================================
TZ=Asia/Shanghai

# ================================
# 后端配置（可选）
# ================================
# 上传文件最大大小（字节）
UPLOAD_MAX_SIZE=524288000

# 上传目录
UPLOAD_DIR=uploads

# ================================
# 七牛云配置（如需使用）
# ================================
# QINIU_ACCESS_KEY=your_access_key
# QINIU_SECRET_KEY=your_secret_key
# QINIU_BUCKET=your_bucket_name

# ================================
# 数据库配置（如需使用）
# ================================
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname
# REDIS_URL=redis://localhost:6379/0

# ================================
# 应用配置
# ================================
# 日志级别 (debug, info, warn, error)
LOG_LEVEL=info

# 运行模式 (development, production)
RUN_MODE=production

# ================================
# Docker资源限制（可选）
# ================================
# SERVER_MEMORY_LIMIT=512M
# SERVER_CPU_LIMIT=1
# WEB_MEMORY_LIMIT=256M
# WEB_CPU_LIMIT=0.5
